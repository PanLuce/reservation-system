# Production Environment Configuration
# Copy this file to .env.production and fill in the values

# ====================
# Server Configuration
# ====================
NODE_ENV=production
PORT=3001

# ====================
# Security
# ====================
# REQUIRED: Strong random secret for session encryption
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=

# Comma-separated list of allowed CORS origins
ALLOWED_ORIGINS=https://centrumrubacek.cz

# ====================
# Database
# ====================
# Path to SQLite database file
DATABASE_PATH=./data/reservations.db

# ====================
# Logging
# ====================
# Log level: error, warn, info, debug
LOG_LEVEL=info

# ====================
# Email Configuration (Optional)
# ====================
# SMTP server configuration for sending notifications
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# Email addresses
ADMIN_EMAIL=admin@centrumrubacek.cz
FROM_EMAIL=reservations@centrumrubacek.cz

# ====================
# Admin Account Seeding
# ====================
# REQUIRED: Admin credentials for initial setup
# Only used if no admin users exist in database
ADMIN_EMAIL_SEED=admin@centrumrubacek.cz
ADMIN_PASSWORD_SEED=
