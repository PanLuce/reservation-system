# Development Environment Configuration
# Copy this file to .env for local development

# ====================
# Server Configuration
# ====================
NODE_ENV=development
PORT=3000

# ====================
# Security
# ====================
# Session secret (uses safe default in development)
SESSION_SECRET=dev-secret-only-for-local-development

# Allowed CORS origins (allows all in development)
# ALLOWED_ORIGINS=http://localhost:3000

# ====================
# Database
# ====================
DATABASE_PATH=./data/reservations.db

# ====================
# Logging
# ====================
# Log level: error, warn, info, debug
LOG_LEVEL=debug

# ====================
# Email Configuration (Optional)
# ====================
# Leave empty to use console logging instead of real emails
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

ADMIN_EMAIL=admin@test.local
FROM_EMAIL=reservations@test.local

# ====================
# Admin Account Seeding
# ====================
# Admin credentials for initial setup
ADMIN_EMAIL_SEED=admin@test.local
ADMIN_PASSWORD_SEED=admin123

